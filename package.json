{
    "name": "thisispads.me.uk",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint .",
        "lintci": "eslint . --quiet",
        "axe": "axe localhost:3000 --exit",
        "axeci": "axe localhost:3000 --exit --chrome-options='user-data-dir=/tmp/axe-$GITHUB_RUN_ID'",
        "a11y": "start-server-and-test start http://localhost:3000 axe",
        "a11yci": "start-server-and-test start http://localhost:3000 axeci",
        "test": "npm run lintci",
        "postinstall": "npx husky install && npx webdriver-manager update && npx browser-driver-manager install chrome"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run lint"
        }
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "dependencies": {
        "@fontsource/raleway": "^5.1.0",
        "@fontsource/roboto-slab": "^5.1.0",
        "@fortawesome/fontawesome-svg-core": "^6.7.1",
        "@fortawesome/free-brands-svg-icons": "^6.7.2",
        "@fortawesome/free-regular-svg-icons": "^6.7.1",
        "@fortawesome/free-solid-svg-icons": "^6.7.1",
        "@fortawesome/react-fontawesome": "^0.2.2",
        "autoprefixer": "^10.4.20",
        "date-fns": "^4.1.0",
        "glob": "^11.0.0",
        "gray-matter": "^4.0.3",
        "mastodon": "^1.2.2",
        "next": "^16.1.1",
        "path": "^0.12.7",
        "postcss": "^8.4.49",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "rss": "^1.2.2",
        "sharp": "0.34.4",
        "slug": "^10.0.0",
        "tailwindcss": "^3.4.17"
    },
    "devDependencies": {
        "@axe-core/cli": "^4.10.1",
        "@eslint/eslintrc": "^3.3.3",
        "@next/eslint-plugin-next": "^16.1.1",
        "@types/node": "^22.10.2",
        "@types/react": "^18.3.12",
        "@types/rss": "0.0.32",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.17.0",
        "eslint-config-next": "^16.1.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-unused-imports": "^4.1.4",
        "husky": "^9.1.7",
        "import-sort-style-module": "^6.0.0",
        "netlify-cli": "^23.9.1",
        "prettier": "^3.4.2",
        "prettier-plugin-import-sort": "0.0.7",
        "start-server-and-test": "^2.0.9",
        "typescript": "^5.9.2",
        "webdriver-manager": "^12.1.9"
    }
}
